<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              style="@style/MyCity.Elenco.Item"
              android:id="@+id/elenco_row_layout"
              android:layout_height="wrap_content" >
    <com.EGaspari.Mobile.Objects.LoaderImageView
        android:id="@+id/elenco_row_item_immagine"
        android:layout_height="75dip"
        style="@style/MyCity.Elenco.Item"
        android:layout_width="75dip" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/elenco_row_item_titolo"
            style="@style/MyCity.Elenco.Item.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/elenco_row_item_sotto_titolo"
            android:layout_width="match_parent"
            style="@style/MyCity.Elenco.Item.Description"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
</LinearLayout>